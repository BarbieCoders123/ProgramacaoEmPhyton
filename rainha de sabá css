/* Responsividade */
@media (max-width: 768px) {
    .main-header h1 {
        font-size: 2.2em;
    }

    .header-content {
        flex-direction: column; /* Em telas menores, logo e título um abaixo do outro */
    }

    .search-form {
        flex-direction: column; /* Itens do formulário um abaixo do outro */
        align-items: stretch; /* Estica os itens para preencher a largura */
    }

    .search-input,
    .button {
        width: 100%; /* Botões e input ocupam a largura total */
        box-sizing: border-box; /* Inclui padding e borda na largura total */
    }

    .books-table th,
    .books-table td {
        padding: 10px;
        font-size: 0.9em;
    }

    .gallery-grid {
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); /* Colunas menores para mobile */
    }

    .image-gallery img {
        height: 140px;
    }
}

@media (max-width: 480px) {
    .main-header h1 {
        font-size: 1.8em;
    }

    .logo {
        max-width: 120px;
    }

    main {
        padding: 0 10px;
    }

    section {
        padding: 20px;
    }

    h2 {
        font-size: 1.6em;
    }

    .button {
        padding: 10px 15px;
        font-size: 0.9em;
    }

    /* Esconde colunas da tabela para telas muito pequenas (opcional) */
    .books-table thead th:nth-child(1), /* ID */
    .books-table tbody td:nth-child(1) {
        display: none; /* Esconde a coluna ID */
    }
}
