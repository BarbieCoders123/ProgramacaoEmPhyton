/* Variáveis CSS para tons de azul */
:root {
    --color-primary-dark: #2c3e50; /* Azul petróleo, quase preto para texto e cabeçalhos */
    --color-primary-medium: #34495e; /* Azul escuro para fundo de cabeçalho da tabela */
    --color-accent-blue: #3498db;   /* Azul vibrante para botões primários */
    --color-light-blue: #5dade2;    /* Azul médio para alguns detalhes */
    --color-lighter-blue: #aed6f1;  /* Azul mais claro para fundos sutis */
    --color-background: #ecf0f1;   /* Cinza claro para o fundo geral */
    --color-text-dark: #333;        /* Cor de texto geral escura */
    --color-text-light: #fff;       /* Cor de texto clara */
    --color-border: #ddd;           /* Cor de borda clara */
    --color-success: #2ecc71;       /* Verde para sucesso/adicionar */
    --color-warning: #f39c12;       /* Laranja para editar */
    --color-danger: #e74c3c;        /* Vermelho para excluir */
}

